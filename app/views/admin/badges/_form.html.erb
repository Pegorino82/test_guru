<%= form_with model: [:admin, @badge] do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :path %>
    <%= form.text_field :path %>
  </p>
  <p>
    <%= form.label :badge_rule %>
    <%= form.collection_select :badge_rule_id, BadgeRule.all, :id, :title, prompt: true %>
  </p>
  <p><%= form.submit %></p>
<% end %>