<p>
  <strong>Title</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level</strong>
  <%= @test.level %>
</p>

<p>Questions</p>

<ul>
  <% @test.questions.each do |question| %>
      <li><%= link_to question.body, question_path(question) %></li>
  <% end %>
</ul>

<%= link_to 'Back', tests_path %> |
<%= link_to 'Edit', edit_test_path(@test) %> |
<%= link_to 'Delete', test_path(@test), method: :delete, data: {confirm: 'Delete?'} %> |
<%= link_to 'Add question', new_test_question_path(@test) %>
